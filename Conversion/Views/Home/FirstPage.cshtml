@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout="_Layout";
    ViewBag.Title = "Conversion";
}
@model Conversion.Models.Conversion;
<h1>Page de conversion</h1>
<hr />
<form asp-action="FirstPage" class="container-fluid ">

    <div class="form_group "  >
    <label class="radio-inline">
        @Html.RadioButtonFor(model => model.InitialMetric, "Celsius", new {name="InitialMetric"}) Celsius
    </label>

    <label class="radio-inline">
        @Html.RadioButtonFor(model => model.InitialMetric, "Fahrenheit", new {name="InitialMetric"}) Fahrenheit
    </label>
    <div class="row" >
    <span asp-validation-for="InitialMetric" class="text-danger"></span>
    </div>
    </div>
        
         <br />


    <input type="number" asp-for="InitialValue" class="" />
    <div class="row " >
    <span asp-validation-for="InitialValue" class="text-danger"></span>
  </div>
        

     <br />

     <div>
    <button type="submit" class="btn btn-success " value="Ajouter">Submit</button>
    </div>
</form>